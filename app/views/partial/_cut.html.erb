

<%=form_for(haircut) do |f| %> 

<%= f.label :style  %>
<%= f.text_field :style %>
<br> 
<%= f.label :date %> <%= f.label 'format (yyyy-mm-dd hr:mm)' %>
<br><p>
<%= f.text_field :date %></p>
<br> 
<%= f.label :barber %>
<%= f.text_field :barber, list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <% Barber.all.each do |barber| %>
      <option value="<%= barber.name %>" name="<%= barber.id %>">
    <% end %>
  </datalist> 
  <br>
  <%= f.label :customer %> 
  <% if haircut.customer_id.blank? %>
  <%= f.text_field :customer_id %> 
  <% else %>
  <%= f.hidden_field :customer_id  %>
  <% end %>
<%= f.submit %>
<% end %> 

