<% if flash[:full_errors]  %>
<ul>
<% flash[:full_errors].each do |k,v| %>
    <li><h2 class='red'><%=k %></h2></li> 
    <% v.first.each do |x,y| %>
        <p>cannot be <%= y %></p>
        
        <%end%> 
     
        
    <% end %>

</ul>
    <% else %> 

    <h1 class="first"><%= session[:errors] %></h1><h4><%= link_to 'Sign In', login_path %> or Register Below</h4> 
    
    <% end %>
<% if flash[:error] %> 
    <div class="first"><h3 class='red'><%= flash[:error] %></h3> 

    </div>  
    
    <% end %> 

